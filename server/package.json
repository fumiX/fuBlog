{
  "name": "@fumix/fu-blog-server",
  "version": "0.2.5",
  "description": "Backend Server for Blog in Node/Express",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV='development' NODE_EXTRA_CA_CERTS=../certs/ca.crt nodemon --exec node --trace-uncaught --loader=ts-node/esm -r dotenv/config ./src/server.ts",
    "write-app-version": "git describe --always --dirty > dist/app_version.txt",
    "build": "tsc && npm run write-app-version",
    "run-prod": "node ./dist/server.js",
    "lint": "prettier --check 'src/**/*.(ts|vue)' && eslint src/**/*.ts",
    "lintfix": "prettier 'src/**/*.(ts|vue)' --write && eslint src/**/*.ts --fix",
    "format": "eslint src/**/*.ts --fix",
    "test": "node --test --loader ts-node/esm tests/**.ts",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "type": "module",
  "dependencies": {
    "@fumix/fu-blog-common": "*",
    "canvas": "2.11.2",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "isomorphic-dompurify": "2.26.0",
    "jose": "5.8.0",
    "multer": "1.4.5-lts.1",
    "nodemailer": "6.9.15",
    "openai": "4.58.1",
    "pg": "8.12.0",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.20",
    "winston": "3.14.2",
    "winston-daily-rotate-file": "5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jsdom": "21.1.7",
    "@types/multer": "1.4.12",
    "@types/node-fetch": "2.6.11",
    "@types/nodemailer": "6.4.15",
    "@types/pako": "2.0.3",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "node-fetch": "3.3.2",
    "nodemon": "3.1.4",
    "openid-client": "5.7.0",
    "prettier": "3.3.3",
    "ts-node": "10.9.2",
    "typescript": "5.5.4"
  }
}
