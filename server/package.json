{
  "name": "@fumix/fu-blog-server",
  "version": "0.2.3",
  "description": "Backend Server for Blog in Node/Express",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV='development' NODE_EXTRA_CA_CERTS=../certs/ca.crt nodemon --exec node --import=../scripts/register.mjs -r dotenv/config ./src/server.ts",
    "write-app-version": "git describe --always --dirty > dist/app_version.txt",
    "build": "tsc && npm run write-app-version",
    "run-prod": "node ./dist/server.js",
    "lint": "prettier --check 'src/**/*.(ts|vue)' && eslint src/**/*.ts",
    "lintfix": "prettier 'src/**/*.(ts|vue)' --write && eslint src/**/*.ts --fix",
    "format": "eslint src/**/*.ts --fix",
    "test": "node --test --loader ts-node/esm tests/**.ts",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "type": "module",
  "dependencies": {
    "@fumix/fu-blog-common": "*",
    "canvas": "^2.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jose": "^5.4.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "openai": "^4.52.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.15",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jsdom": "^21.1.1",
    "@types/multer": "^1.4.7",
    "@types/node-fetch": "^2.6.2",
    "@types/nodemailer": "^6.4.15",
    "@types/pako": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "node-fetch": "^3.3.1",
    "nodemon": "^3.1.4",
    "openid-client": "^5.4.0",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  }
}
